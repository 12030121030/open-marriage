<h1>RSVP</h1>

{{#with invitation}}
<p>{{id}}</p>
<p>{{address}}</p>
<p>{{rsvpd}}</p>

{{#if guests}}
<b>Guests:</b>
<ul>
  {{#each guests}}
    <li>{{title}} {{name}}</li>
  {{/each}}
</ul>
{{/if}}

<form action="/invitations/{{id}}/" method="POST">
    <input type="hidden" name="_method" value="PUT" />
    <input type="hidden" name="_csrf" value="{{../csrf}}" />

    <p>
        <label>
            <input type="radio" name="rsvp" value="true"
                    {{#rsvpdYes}}checked="checked"{{/rsvpdYes}} />
            You are attending
        </label>
        <br />
        <label>
            <input type="radio" name="rsvp" value="false"
                    {{#rsvpdNo}}checked="checked"{{/rsvpdNo}} />
            You are <em>not</em> attending
        </label>
    </p>
    <p><input type="submit" value="Save" /></p>
</form>
{{/with}}
